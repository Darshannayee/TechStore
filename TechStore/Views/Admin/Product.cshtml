@model IEnumerable<TechStore.DAL.Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Product
        <a href="../Admin/ProductAdd" class="btn btn-info pull-right" style="float: right !important;">Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{int count = 1; } 
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@count</td>
                        <td>@item.ProductName</td>
                        <td>
                            @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId })
                        </td>
                       
                    </tr>
                        count++;
                    }
                    

                </tbody>
            </table>
        </div>
    </div>
</div>
