@using TechStore.Models.Home
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>
@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No Product added to cart!</strong>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Item item in (List<Item>)Session["cart"])
            {    
            <tr>
                <td>@item.products.ProductName</td>
                <td>$@item.products.Price</td>
                <td>@item.Quantity</td> 
                <td>
                    <a href="@Url.Action("AddToCart", "Home", new { productId=item.products.ProductId, Url="Checkout" })">
                        <i class="fa fa-plus"></i>
                    </a>
                    <a href="@Url.Action("DecreaseQty", "Home", new { productId=item.products.ProductId})">
                        <i class="fa fa-minus"></i>
                    </a>
                </td>
            </tr>

            }
        </tbody>
    </table>
    <a class="btn btn-success" href="@Url.Action("CheckoutDetails","Home")">Checkout >></a> 
}
